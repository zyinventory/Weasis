<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>weasis-imageioext-parent</artifactId>
		<groupId>org.weasis.imageioext</groupId>
		<version>1.4-SNAPSHOT</version>
		<relativePath>../weasis-imageioext-parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<packaging>bundle</packaging>
	<artifactId>weasis-imageioext-j2k-codec-macosx-x86-64</artifactId>
	<name>Kakadu native Mac amd64 codec</name>
	<version>6.4.0</version>
	<properties>
		<bundle.symbolicName>${project.artifactId}</bundle.symbolicName>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-NativeCode>lib/libkdu_jni.jnilib; processor=x86-64; osname=MacOSX</Bundle-NativeCode>
						<Fragment-Host>weasis-imageioext-j2k-codec;bundle-version="0.5.2"</Fragment-Host>
						<Embed-StripVersion>true</Embed-StripVersion>
						<Embed-Dependency>*;scope=compile;inline=false</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.weasis.thirdparty.kakadu</groupId>
			<artifactId>libkdu_jni</artifactId>
			<version>6.4.0</version>
			<type>jnilib</type>
			<classifier>macosx-x86-64</classifier>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>